<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="llt_input_back">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/back_white_8</item>
    </style>

    <style name="img_input_header">
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="llt_input_spec">
        <item name="android:layout_marginStart">12sp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="txt_edit_text">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn.white">
        <item name="android:background">@drawable/back_white_corner_circle</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="btn.blue">
        <item name="android:background">@drawable/back_btn_invite</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="btn.red">
        <item name="android:background">@drawable/back_btn_remove</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="lbl">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="lbl.black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="lbl.grey">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="lbl.white">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>